= link_to 'New Message', new_message_path, class: 'btn btn-sm btn-primary'
= link_to 'Sent Messages', sent_messages_path, class: 'btn btn-sm btn-primary'

- @messages.each do |message|
  .message.row.clearfix
    %h3
      = link_to(message.seen ? message.message_heading : message.message_heading + " (New)", message_path(message))
      %br/
      %small.author
        = "Sent #{time_ago_in_words(message.created_at)} ago by #{message.user.name}"
.flickr_pagination
  = will_paginate @messages, :page_links => true
